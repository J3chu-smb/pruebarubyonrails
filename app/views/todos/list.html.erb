<div class="row align-items-center">

<div class="col-md-6 btn">
  <div class="text-white align-items-center text-center justify-content-center">
    <div class="pt-5 pb-5">
      <h3>Completed ToDos</h3>
      <% @todos.each do |todo| %>
      <p><%= "#{todo.description} /  #{todo.completed}" %></p>
      <div class="card-columns">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-text"><%= todo.description %></h5>
            <p class="card-text"><%= todo.completed %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-md-6 bg-white">
  <div class="d-md-flex align-items-center justify-content-center">
    <h3>Incompleted ToDos</h3>
    <% @todos.each do |todo| %>
    <p><%= "#{todo.description} /  #{todo.completed}" %></p>
      <div class="card-columns">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-text"><%= todo.description %></h5>
            <p class="card-text"><%= todo.completed %></p>
          </div>
        </div>
      </div>
  </div>
</div>

</div>

<% end %>
